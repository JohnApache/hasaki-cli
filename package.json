{
  "name": "@dking/hasaki-cli",
  "version": "0.0.7",
  "description": "自动化构建react, vue, jquery, js类库, koa/express/egg项目, node-plugin, typescript 等等多种项目结构初始化",
  "main": "index.js",
  "bin": {
    "hasaki-cli": "./bin/cmd.js"
  },
  "directories": {
    "src": "src",
    "lib": "lib",
    "test": "test",
    "assets": "assets"
  },
  "dependencies": {
    "@dking/dgit": "^0.0.7",
    "@dking/event-proxy": "^1.0.1",
    "@types/lodash": "^4.14.144",
    "chalk": "^2.4.2",
    "commander": "^3.0.1",
    "ejs": "^2.6.2",
    "inquirer": "^7.0.0",
    "lodash": "^4.17.15",
    "ora": "^3.4.0",
    "progress": "^2.0.3"
  },
  "devDependencies": {
    "@types/chai": "^4.2.0",
    "@types/ejs": "^2.6.3",
    "@types/inquirer": "^6.5.0",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.7.4",
    "@typescript-eslint/eslint-plugin": "^2.6.0",
    "@typescript-eslint/parser": "^2.6.0",
    "chai": "^4.2.0",
    "eslint": "6.6.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.1.1",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "mocha": "^6.2.0",
    "prettier-eslint-cli": "^4.7.1",
    "ts-node": "^8.3.0",
    "typescript": "^3.6.2"
  },
  "scripts": {
    "build": "tsc --build",
    "format": "prettier-eslint 'src/**/*.{ts,tsx}' --write",
    "lint": "eslint src --ext .jsx --ext .js --ext .tsx --ext .ts --cache --fix",
    "prepublishOnly": "npm run test && npm run build",
    "test": "mocha --require ts-node/register 'test/**/*.{ts,tsx}' -t 5000",
    "watch": "tsc --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JohnApache/hasaki-cli.git"
  },
  "keywords": [],
  "author": "JohnApache",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JohnApache/hasaki-cli/issues"
  },
  "homepage": "https://github.com/JohnApache/hasaki-cli#readme",
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier-eslint 'src/**/*.{ts,tsx}' --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "prettier": {
    "printWidth": 80,
    "tabWidth": 4,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "proseWrap": "preserve"
  }
}
